namespace FlatGeobuf;

enum GeometryType:ubyte {
  Point,
  MultiPoint,
  LineString,
  MultiLineString,
  Polygon,
  MultiPolygon,
  GeometryCollection
}

table Geometry {
  type: GeometryType;
  types: [GeometryType];
  dimensions: ubyte = 2;
  envelope: [double];
  lengths: [uint];
  ring_lengths: [uint];
  ring_counts: [uint];
  coords: [double] (required);
}

root_type Geometry;
namespace FlatGeobuf;

enum GeometryType:ubyte {
  Point,
  MultiPoint,
  LineString,
  MultiLineString,
  Polygon,
  MultiPolygon,
  GeometryCollection
}

table Geometry {
  geometries: [Geometry]; // GeometryCollection
  type: GeometryType;
  dimensions: ubyte = 2;
  envelope: [double];
  endss: [uint]; // MultiPolygon part ends
  ends: [uint]; // MultiLineString part ends or Polygon ring ends
  coords: [double];
}

root_type Geometry;
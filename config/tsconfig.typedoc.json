{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": false,
        "outDir": "../lib",
        "sourceMap": true,
        "target": "ESNext",
        "typeRoots": [ "./src/ts/types", "./node_modules/@types"]
    },
    "include": [
        "../src/ts"
    ],
    "exclude": [
        "../node_modules",
        "../**/*.spec.ts"
    ],
    "typedocOptions": {
        "out": "dist/doc",
        "tsconfig": "config/tsconfig.json",
        "exclude": [
            "**/*.spec.ts"
        ],
        "inputFiles": "src/ts/flatgeobuf.ts",
        "readme": "none"
    }
}

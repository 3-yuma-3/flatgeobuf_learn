{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,
        "declaration": true,
        "outDir": "../lib",
        "sourceMap": true,
        "target": "ESNext"
    },
    "include": [
        "../src/ts"
    ],
    "exclude": [
        "../node_modules",
        "../**/*.spec.ts"
    ],
    "typeRoots": [ "./src/ts/types", "./node_modules/@types"]
}
